extends ../layout

block content
  form(method='POST' action='/patterns')
    div.nes-field
      label(for='name') Name:
      input(type='text', placeholder='Name', name='name')
    div.nes-field
      label(for='color') Color:
      input(type='color', value=`#${Math.floor(Math.random()*16777215).toString(16)}`, style='height:50px;width:100px' name='color')
    a.nes-btn(href='/patterns') Cancel
    button.nes-btn.is-success(type='submit') Create
